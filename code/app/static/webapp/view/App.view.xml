<mvc:View
  controllerName="nao-nano-backpack.controller.App"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt">
  <App id="app" initialPage="page2">
    <Page id="page1">
      <customHeader>
        <Toolbar design="Solid" class="customHeaderToolbar">
          <core:Icon
            src="sap-icon://sap-ui5"
            size="2em"
            color="darkorange"/>
          <ToolbarSpacer/>
          <Title text="Index" level="H3" class="customHeaderToolbarTitle"/>
          <ToolbarSpacer/>
          <MenuButton
            icon="sap-icon://person-placeholder"
            type="Emphasized">
          <menu>
            <Menu>
              <MenuItem text="{/username}"/>
              <MenuItem text="Logout" icon="sap-icon://log" />
            </Menu>
          </menu>
          </MenuButton>
        </Toolbar>
      </customHeader>
      <Button
        icon="sap-icon://sap-ui5"
        text="Go!"
        press=".onPress"
        type="Emphasized"
        class="sapUiSmallMargin"/>
    </Page>
    <Page id="page2">
      <customHeader>
        <Toolbar design="Solid" class="customHeaderToolbar">
          <core:Icon
            src="sap-icon://sap-ui5"
            size="2em"
            color="darkorange"/>
          <ToolbarSpacer/>
          <Title text="Controlling NAO" level="H3" class="customHeaderToolbarTitle"/>
          <ToolbarSpacer/>
          <MenuButton
            icon="sap-icon://person-placeholder"
            type="Emphasized">
          <menu>
            <Menu>
              <MenuItem text="Backpacker"/>
              <MenuItem text="Logout" icon="sap-icon://log" />
            </Menu>
          </menu>
          </MenuButton>
        </Toolbar>
    </customHeader>
      <l:BlockLayout background="Light">
        <l:BlockLayoutRow>
          <l:BlockLayoutCell>
            <VBox
              alignItems="Center"
              width="100%"
              height="100%">
              <HBox>
                <Button
                  icon="sap-icon://arrow-top"
                  type="Emphasized"
                  press=".walkUp"/>
              </HBox>
              <HBox alignItems="Center">
                <Button
                  icon="sap-icon://arrow-left"
                  type="Emphasized"
                  press=".walkLeft"/>
                <Button enabled="false"/>
                <Button
                  icon="sap-icon://arrow-right"
                  type="Emphasized"
                  press=".walkRight"/>
              </HBox>
              <HBox>
                <Button
                  icon="sap-icon://arrow-bottom"
                  type="Emphasized"
                  press=".walkDown"/>
              </HBox>
            </VBox>
          </l:BlockLayoutCell>
          <l:BlockLayoutCell>
          <VBox
            alignItems="Center"
            width="100%"
            height="100%">
              <HBox>
                <Button
                  text="Hello, World!"
                  type="Emphasized"
                  press=".callPrintMsg"/>
              </HBox>
              <HBox alignItems="Center">
                <!--Button text="Let's go!" type="Emphasized"/-->
                <Button
                  icon="sap-icon://post"
                  enabled="false"/>
                <!--Button text="I am NAO!" type="Emphasized"/-->
              </HBox>
              <HBox>
                <Button
                  text="I am NAO"
                  type="Emphasized"
                  press=".sayIAm"/>
              </HBox>
            </VBox>
          </l:BlockLayoutCell>
        </l:BlockLayoutRow>

        <l:BlockLayoutRow>
          <l:BlockLayoutCell>
            <Panel
              headerText="Where is NAO?"
              expandable="true">
              <l:HorizontalLayout class="sapUiSmallMargin">
                <Input
                  id="naoip"
                  placeholder="Enter NAO's IP"
                  value="{
                    path : '/naoip',
                    type : 'sap.ui.model.type.String'}"/>
                <Button
                  text="Init NAO"
                  type="Emphasized"
                  press=".callInitQiSession('192.168.2.37')"/>
              </l:HorizontalLayout>
            </Panel>
          </l:BlockLayoutCell>
          <l:BlockLayoutCell>
            <Panel
              headerText="Let's talk!"
              expandable="true">
              <l:HorizontalLayout class="sapUiSmallMargin">
                <Input
                  id="naospeak"
                  placeholder="Enter NAO's thoughts"
                  value="{
                    path : '/naospeak',
                    type : 'sap.ui.model.type.String'}"/>
              </l:HorizontalLayout>
            </Panel>
          </l:BlockLayoutCell>
        </l:BlockLayoutRow>

        <l:BlockLayoutRow>
          <l:BlockLayoutCell>
            <Panel
              headerText="My POV"
              expandable="true">
              <l:HorizontalLayout class="sapUiSmallMargin">
                <Input placeholder="Here should be a video"/>
              </l:HorizontalLayout>
            </Panel>
           </l:BlockLayoutCell>
        </l:BlockLayoutRow>

        <l:BlockLayoutRow>
          <l:BlockLayoutCell>
            <Button
              text="Back to start"
              type="Emphasized"
              press=".goBack"/>
          </l:BlockLayoutCell>
        </l:BlockLayoutRow>

      </l:BlockLayout>
    </Page>
  </App>
</mvc:View>
